{
    "version": "dev",
    "virtualhost": "localhost",
    "directories": {
        "./my-static-dir": {
            "alias": "/blog",
            "index": "index.php"
        }
    },
    "locations": {
        "/blog": {
            "match": {
                "\\.php$": {
                    "proxy": {
                        "protocol": "fcgi://",
                        "hostname": "127.0.0.1",
                        "port": "8080",
                        "backend_alias": "/usr/share/wordpress/$1"
                    },
                    "allow": "all"
                }
            }
        }
    }
}
