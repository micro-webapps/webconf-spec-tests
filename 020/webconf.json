{
    "version": "dev",
    "virtualhost": "localhost",
    "locations": {
        "/blog": {
            "alias": "./my-static-dir",
            "index": "index.php",
            "match": {
                "\\.php$": {
                    "proxy": {
                        "protocol": "fcgi://",
                        "hostname": "127.0.0.1",
                        "port": 8080,
                        "backend_alias": "/usr/share/wordpress/$1"
                    },
                    "allow": "all"
                }
            }
        }
    }
}
