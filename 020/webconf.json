{
    "virtualhost": "localhost",
    "locations": {
        "/blog": {
            "alias": "./my-static-dir",
            "index": "index.php",
            "match": {
                "\\.php$": {
                    "proxy_protocol": "fcgi://",
                    "proxy_hostname": "127.0.0.1",
                    "proxy_port": "8080",
                    "proxy_backend_alias": "/usr/share/wordpress/$1",
                    "allow": "all"
                }
            }
        }
    }
}
