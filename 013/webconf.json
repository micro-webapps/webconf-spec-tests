{
    "version": "dev",
    "virtualhost": "localhost",
    "directories": {
        "./my-static-dir": {
            "alias": "/blog",
            "index": "index.php"
        }
    },
    "locations": {
        "/blog": {
            "match": {
                "\\.txt$": {
                    "proxy": {
                        "protocol": "fcgi://",
                        "hostname": "localhost",
                        "port": 8080,
                        "backend_alias": "/usr/share/wordpress/$1"
                    },
                    "allow": "all"
                },
                "\\.php$": {
                    "proxy": {
                        "protocol": "fcgi://",
                        "hostname": "localhost",
                        "port": 8081,
                        "backend_alias": "/usr/share/wordpress/$1"
                    },
                    "allow": "all"
                }
            },
            "proxy": {
                "protocol": "fcgi://",
                "hostname": "localhost",
                "port": 8081,
                "backend_alias": "/usr/share/wordpress/$1"
            }
        }
    }
}
